[Unit]
Description=Make windows transparent when not focused
BindsTo=graphical-session.target
Wants=graphical-session-pre.target
After=graphical-session-pre.target

[Service]
Type=simple
ExecStart=%h/.local/share/sway-contrib/inactive-windows-transparency.py --opacity 0.9
Restart=on-failure

[Install]
WantedBy=default.target
